<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrdersActivity">

  <SearchView
      android:id="@+id/searchView"
      android:background="@drawable/rounded_searchview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      android:iconifiedByDefault="false"
      android:queryHint="Search..."
      android:elevation="8dp"
      android:queryBackground="@android:color/transparent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/searchView" >

    <androidx.gridlayout.widget.GridLayout
        android:animateLayoutChanges="true"
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="1"
        app:rowCount="50" >

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_row="1"
          app:layout_column="0"
          app:layout_columnWeight="1"
          app:layout_gravity="fill"
          android:layout_margin="8dp"
          app:cardCornerRadius="8dp"
          app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_vertical">

          <ImageView
              android:layout_width="75dp"
              android:layout_height="75dp"
              android:scaleType="centerCrop"
              android:src="@drawable/lanwa_cement" />

          <LinearLayout
              android:layout_width="232dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:gravity="center"
              android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:scaleType="centerCrop"
                android:text="Delivered on 26.04.2023"
                android:textStyle="bold" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:scaleType="centerCrop"
                android:text="Lanwa Cement 50Kg"
                android:textStyle="bold" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:scaleType="centerCrop"
                android:text="Qty. 02"
                android:textStyle="bold" />

          </LinearLayout>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:scaleType="centerCrop"
              android:src="@drawable/ic_arrow_next" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_row="1"
          app:layout_column="0"
          app:layout_columnWeight="1"
          app:layout_gravity="fill"
          android:layout_margin="8dp"
          app:cardCornerRadius="8dp"
          app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_vertical">

          <ImageView
              android:layout_width="75dp"
              android:layout_height="75dp"
              android:scaleType="centerCrop"
              android:src="@drawable/electro_tool_set" />

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:scaleType="centerCrop"
                android:text="Ordered on 26.04.2023"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:scaleType="centerCrop"
                android:text="Electro Tool Set"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:scaleType="centerCrop"
                android:text="Qty. 01"
                android:textStyle="bold"/>

          </LinearLayout>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:scaleType="centerCrop"
              android:src="@drawable/ic_arrow_next" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_row="3"
          app:layout_column="0"
          app:layout_columnWeight="1"
          app:layout_gravity="fill"
          android:layout_margin="8dp"
          app:cardCornerRadius="8dp"
          app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_vertical">

          <ImageView
              android:layout_width="75dp"
              android:layout_height="75dp"
              android:scaleType="centerCrop"
              android:src="@drawable/anton_armor_roofing_7_6_feet_colors" />

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:scaleType="centerCrop"
                android:text="Ordered on 20.04.2023"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:scaleType="centerCrop"
                android:text="Anton Armor Roofing Sheet "
                android:textStyle="bold"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:scaleType="centerCrop"
                android:text="Qty. 12"
                android:textStyle="bold"/>

          </LinearLayout>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:scaleType="centerCrop"
              android:src="@drawable/ic_arrow_next" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_row="4"
          app:layout_column="0"
          app:layout_columnWeight="1"
          app:layout_gravity="fill"
          android:layout_margin="8dp"
          app:cardCornerRadius="8dp"
          app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_vertical">

          <ImageView
              android:layout_width="75dp"
              android:layout_height="75dp"
              android:scaleType="centerCrop"
              android:src="@drawable/cement_bricks" />

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:scaleType="centerCrop"
                android:text="Delivered on 19.04.2023"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:scaleType="centerCrop"
                android:text="Cement Bricks 1 Pc"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:scaleType="centerCrop"
                android:text="Qty.1500"
                android:textStyle="bold"/>

          </LinearLayout>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:scaleType="centerCrop"
              android:src="@drawable/ic_arrow_next" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_row="5"
          app:layout_column="0"
          app:layout_columnWeight="1"
          app:layout_gravity="fill"
          android:layout_margin="8dp"
          app:cardCornerRadius="8dp"
          app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_vertical">

          <ImageView
              android:layout_width="75dp"
              android:layout_height="75dp"
              android:scaleType="centerCrop"
              android:src="@drawable/scissor" />

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:scaleType="centerCrop"
                android:text="Delivered on 19.04.2023"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:scaleType="centerCrop"
                android:text="Normal Scissor"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:scaleType="centerCrop"
                android:text="Qty. 01"
                android:textStyle="bold"/>

          </LinearLayout>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:scaleType="centerCrop"
              android:src="@drawable/ic_arrow_next" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_row="6"
          app:layout_column="0"
          app:layout_columnWeight="1"
          app:layout_gravity="fill"
          android:layout_margin="8dp"
          app:cardCornerRadius="8dp"
          app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_vertical">

          <ImageView
              android:layout_width="75dp"
              android:layout_height="75dp"
              android:scaleType="centerCrop"
              android:src="@drawable/hd_cutting_wheel" />

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:scaleType="centerCrop"
                android:text="Ordered on 18.04.2023"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:scaleType="centerCrop"
                android:text="HD Flap Disc"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:scaleType="centerCrop"
                android:text="Qty. 03"
                android:textStyle="bold"/>

          </LinearLayout>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:scaleType="centerCrop"
              android:src="@drawable/ic_arrow_next" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>

  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>