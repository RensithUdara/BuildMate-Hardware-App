                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingBottom="5dp"
                            android:scaleType="centerCrop"
